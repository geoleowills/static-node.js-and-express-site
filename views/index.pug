extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

      h1 Hey, Potential Employers!

      p.lead.text-light
        | Please see my protfolio below, this shows you a number of different projects that I have worked on, showcasing my different skills across full stack development.
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      each project in projects
        .cell
          a(href= project.live_link target= "_blank")
            img.thumbnail(src= project.image_urls[0])
            h5= project.project_name 
        
